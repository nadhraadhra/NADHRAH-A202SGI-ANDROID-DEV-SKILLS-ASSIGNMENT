<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".TestActivity">

    <TextView
        android:id="@+id/text_view_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/QuestionTotal"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/text_view_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:text="@string/level"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewScoreTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scoreView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Question"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/text_view_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timerLabel"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:freezesText="true"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:buttonTint="@android:color/holo_red_light"
        android:orientation="vertical"
        android:freezesText="true"
        tools:targetApi="lollipop">

        <RadioButton
            android:id="@+id/radio_ansButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@android:color/white"
            android:background="@drawable/bg_border"
            android:text="@string/choice1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:freezesText="true"
            tools:targetApi="lollipop" />

        <RadioButton
            android:id="@+id/radio_ansButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@android:color/white"
            android:background="@drawable/bg_border"
            android:text="@string/choice2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:freezesText="true"
            tools:targetApi="lollipop" />


        <RadioButton
            android:id="@+id/radio_ansButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@android:color/white"
            android:background="@drawable/bg_border"
            android:text="@string/choice3"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:freezesText="true"
            tools:targetApi="lollipop" />
    </RadioGroup>

    <Button
        android:id="@+id/button_next"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawablePadding="2dp"
        android:text="@string/nextBtn"
        android:textColor="@android:color/white"
        android:freezesText="true"
        tools:targetApi="lollipop" />

</LinearLayout>


